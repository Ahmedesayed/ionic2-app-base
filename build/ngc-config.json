{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "lib": ["dom", "es2015"],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "../dist/tmp/tsc",
    "declaration": true
  },
  "include": [
    "../dist/tmp/ngc/app/ng-module.ts"
  ],
  "exclude": [
    "../node_modules"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  },
  "angularCompilerOptions": {
    "genDir": ".."
  }
}
